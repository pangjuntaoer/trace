<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<!-- 系统-D参数覆盖 -->
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="location" value="classpath:dubbo.properties" />
	</bean>

	<!-- 消费方应用名，用于计算依赖关系，不是匹配条件，不要与提供方一样 -->
	<dubbo:application name="${application.name}" />

	<dubbo:registry address="zookeeper://${zookeeper.address}" />
	
	<!-- 生成远程服务代理，可以和本地bean一样使用demoService -->
	<dubbo:reference id="helloServiceApi" protocol="dubbo" check="false"
		interface="com.zxq.iov.cloud.trace.demo.dubbo.iface.HelloServiceApi"
		filter="traceDubboConsumerFilter" />

	<dubbo:reference id="messageServiceApi" check="false" protocol="dubbo"
		interface="com.zxq.iov.cloud.trace.demo.mq.iface.MessageServiceApi"
		filter="traceDubboConsumerFilter" />
</beans>