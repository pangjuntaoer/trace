<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<context:component-scan base-package="com.zxq.iov.cloud.trace" />

	<!--加载配置文件 -->
	<bean id="configproperties"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:rabbitmq.properties</value>
			</list>
		</property>
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	</bean>

	<bean id="traceMqReciveAop" class="com.zxq.iov.cloud.trace.mq.aop.TraceMqReciveAop" />

	<aop:config>
		<aop:pointcut id="pc-mq-recive"
			expression="execution(public* com.zxq.iov.cloud..*MessageListener.onMessage(..))" />
		<aop:aspect id="traceMqReciveAop" ref="traceMqReciveAop" order="-2147483648">
			<aop:around method="around" pointcut-ref="pc-mq-recive" />
		</aop:aspect>
	</aop:config>

</beans>